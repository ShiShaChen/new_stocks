/* pages/stock-template/stock-template.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 0 200rpx 0;
}

/* 页面标题 */
.page-header {
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 标签页 */
.tabs {
  display: flex;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  width: 150rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.7);
  font-size: 30rpx;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  background: #ffffff;
  color: #667eea;
  font-weight: bold;
}

.tab-item .badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff4444;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 模板列表 */
.template-list {
  padding: 0 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 清理按钮 */
.clean-btn {
  margin-bottom: 30rpx;
  padding: 24rpx 32rpx;
  background: rgba(255, 68, 68, 0.2);
  border-radius: 16rpx;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  border: 2rpx solid rgba(255, 68, 68, 0.5);
}

/* 模板卡片 */
.template-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  width: 600rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.template-card.selection-mode {
  padding-left: 80rpx;
}

.template-card.completed {
  opacity: 0.7;
}

/* 多选复选框 */
.selection-checkbox {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.stock-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stock-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.stock-code {
  font-size: 28rpx;
  color: #999999;
}

.completed-tag {
  display: inline-block;
  margin-top: 8rpx;
  padding: 6rpx 16rpx;
  background: #07c160;
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.issue-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.price-label {
  font-size: 24rpx;
  color: #999999;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

/* 卡片主体 */
.card-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 进度条 */
.progress-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-label {
  font-size: 28rpx;
  color: #666666;
}

.progress-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: bold;
}

.progress-bar {
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 6rpx;
  transition: width 0.3s;
}

/* 已完成信息 */
.completed-info {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 140rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 20rpx;
  background: #f8f9fa;
  color: #333333;
  border: 2rpx solid #e0e0e0;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
}

.action-btn.danger {
  background: rgba(255, 68, 68, 0.1);
  color: #ff4444;
  border-color: rgba(255, 68, 68, 0.3);
}

/* 卡片底部 */
.card-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #f0f0f0;
}

.create-time {
  font-size: 24rpx;
  color: #999999;
}

/* 底部工具栏 */
.bottom-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  z-index: 100;
}

.toolbar-left {
  display: flex;
  gap: 16rpx;
}

.tool-btn {
  padding: 16rpx 32rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333333;
  border: 2rpx solid #e0e0e0;
}

.tool-btn.danger {
  background: rgba(255, 68, 68, 0.1);
  color: #ff4444;
  border-color: rgba(255, 68, 68, 0.3);
}

.add-btn {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.add-icon {
  font-size: 56rpx;
  color: #ffffff;
  font-weight: 300;
  line-height: 1;
}

/* 弹窗蒙层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 弹窗内容 */
.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
}

/* 弹窗头部 */
.modal-header {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1;
}

/* 弹窗主体 */
.modal-body {
  padding: 40rpx 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: 2rpx solid #e0e0e0;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.modal-btn.cancel {
  color: #999999;
  border-right: 2rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #667eea;
  font-weight: bold;
}

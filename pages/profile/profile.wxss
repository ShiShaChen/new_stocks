/* pages/profile/profile.wxss */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 40rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 26rpx;
  opacity: 0.8;
  padding-top: 10rpx;
  margin-bottom: 8rpx;
}

.login-time {
  font-size: 22rpx;
  padding-top: 30rpx;
  opacity: 0.7;
}

.edit-user-btn {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  height: 80rpx;
  max-width: 150rpx;
}

.edit-icon {
  font-size: 30rpx;
  color: #f0f4ff;
}

.login-section {
  padding: 120rpx 30rpx;
  text-align: center;
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.login-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-btn {
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 30rpx;
  border: none;
}

.menu-section {
  margin: 20rpx;
  width: 95%;
}

.menu-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.menu-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-content {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.logout-section {
  padding: 40rpx 30rpx;
}

.logout-btn {
  background-color: #ff4757;
  color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  font-size: 32rpx;
  border: none;
  width: 100%;
}

/* 当前账户区域样式 */
.current-account-section {
  background: white;
  width: 80%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.account-header {
  flex: 1;
}

.section-title {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.current-account-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.switch-account-btn {
  background-color: #576b95;
  color: white;
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  border: none;
  min-width: 120rpx;
  max-width: 180rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 弹窗样式 */
.account-modal, .add-account-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80%;
  overflow: hidden;
  position: relative;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-account-btn {
  background-color: #07c160;
  color: white;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border: none;
}

/* 账户列表样式 */
.account-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.account-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.account-item:last-child {
  border-bottom: none;
}

.account-item.active {
  background-color: #f8f9fa;
}

.account-info {
  flex: 1;
}

.account-name {
  font-size: 30rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.account-desc {
  font-size: 24rpx;
  color: #07c160;
}

.check-icon {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

/* 表单样式 */
.form-section {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 100rpx;
  padding: 25rpx;
  border: 2rpx solid #ddd;
  border-radius: 15rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: white;
}

.form-input:focus {
  border-color: #07c160;
  outline: none;
}

.checkbox-item {
  display: flex;
  align-items: center;
}

.checkbox-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  border: none;
}

.btn-cancel {
  background-color: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background-color: #07c160;
  color: white;
}

.btn-confirm:disabled {
  background-color: #ccc;
  color: #999;
}

/* 修改用户信息弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
  box-sizing: border-box;
}

.auth-modal {
  background: white;
  border-radius: 20rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 70vh;
  overflow-y: auto;
  animation: modalSlideIn 0.3s ease-out;
  position: relative;
  margin: auto;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-30rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.modal-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.modal-body {
  padding: 40rpx;
}

/* 头像选择区域 */
.avatar-section {
  margin-bottom: 40rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.avatar-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f8f9fa;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 100%;
  transition: all 0.3s ease;
}

.avatar-button:active {
  border-color: #667eea;
  background: #f0f4ff;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #eee;
}

.avatar-tips {
  font-size: 24rpx;
  color: #666;
}

/* 昵称输入区域 */
.nickname-section {
  margin-bottom: 40rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.nickname-input:focus {
  border-color: #667eea;
  outline: none;
}

/* 资金概览样式 */
.funds-overview-section {
  background: white;
  width: 95%;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.funds-header {
  padding: 30rpx 30rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.funds-header-left {
  flex: 1;
  display: flex;
  align-items: center;
}

.funds-header-right {
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.funds-header .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 0;
}

.funds-manage-wrapper {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.funds-manage-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  min-width: 100rpx;
  max-width: 140rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.2s ease;
}

.funds-manage-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

/* 总资金卡片 */
.total-funds-card {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  position: relative;
}

.total-funds-title {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
  text-align: center;
}

/* 当前账户资金卡片 */
.current-funds-card {
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
}

.current-funds-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  text-align: center;
  font-weight: bold;
}

/* 资金行布局 */
.funds-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.fund-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 10rpx;
}

.fund-label {
  font-size: 22rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
  color: inherit;
}

.fund-amount {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

/* 金额颜色 */
.fund-amount.hkd {
  color: #07c160;
}

.fund-amount.cny {
  color: #ff6b6b;
}

.fund-amount.frozen {
  color: #ffa726;
}

.total-funds-card .fund-amount {
  color: white;
}

/* 快捷操作按钮 */
.funds-quick-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 25rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.quick-action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  border-radius: 16rpx;
  border: none;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.quick-action-btn.deposit {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.quick-action-btn.withdraw {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: white;
}

.quick-action-btn.detail {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #333;
}

.quick-action-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.btn-text {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 居中显示的资金行样式 */
.funds-row-center {
  display: flex;
  justify-content: center;
  margin-bottom: 5rpx;
}

.fund-item-full {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

/* 响应式调整 */
@media (max-height: 800rpx) {
  .auth-modal {
    max-height: 60vh;
  }
  
  .modal-overlay {
    padding: 20rpx;
  }
}

@media (max-width: 600rpx) {
  .funds-row {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .fund-item {
    flex-direction: row;
    justify-content: space-between;
    padding: 10rpx 0;
  }
  
  .funds-quick-actions {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .quick-action-btn {
    flex-direction: row;
    justify-content: center;
    min-width: auto;
  }
  
  .btn-icon {
    margin-bottom: 0;
    margin-right: 10rpx;
  }
}

/* 确保弹框始终居中 */
.modal-overlay {
  /* 添加备用的居中方案 */
  align-items: center !important;
  justify-content: center !important;
}

.auth-modal {
  /* 防止弹框被推到底部 */
  margin: 0 auto !important;
  align-self: center;
}

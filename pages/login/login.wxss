/* pages/login/login.wxss */
.container {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.app-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  width: 100%;
  max-width: 600rpx;
}

/* 授权部分样式 */
.auth-section {
  text-align: center;
}

.auth-tips {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  backdrop-filter: blur(10rpx);
}

.tip-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.tip-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 30rpx;
  line-height: 1.4;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.feature-item {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: left;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  padding: 30rpx 80rpx;
  font-size: 32rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary.loading {
  background-color: #ccc;
}

.btn-secondary {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 用户信息部分样式 */
.user-section {
  text-align: center;
}

.user-info {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  text-align: center;
}

.nickname {
  display: block;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.welcome-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

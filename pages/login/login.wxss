/* pages/login/login.wxss - 基于基础库3.8.10的现代化登录页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* 头部区域 */
.login-header {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: white;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.app-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 登录内容区域 */
.login-content {
  flex: 1;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx 40rpx;
  margin-top: 40rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 已登录状态 */
.logged-in-section {
  text-align: center;
}

.user-info {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid #e9ecef;
}

.user-details {
  flex: 1;
  text-align: left;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.login-time {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 未登录状态 */
.login-section {
  text-align: center;
}

.welcome-info {
  margin-bottom: 80rpx;
}

.welcome-title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.welcome-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

.feature-list {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: left;
}

.feature-item {
  display: block;
  font-size: 26rpx;
  color: #555;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.feature-item:last-child {
  margin-bottom: 0;
}

.login-button-area {
  margin-top: 40rpx;
}

.login-tips {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 按钮样式 */
.btn-primary,
.btn-login {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.btn-primary:active,
.btn-login:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.btn-secondary {
  width: 100%;
  height: 88rpx;
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 44rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: #667eea;
  color: white;
}

.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 授权弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.auth-modal {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
  animation: modalSlideIn 0.3s ease-out;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  padding: 40rpx 40rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.modal-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.modal-body {
  padding: 40rpx;
}

/* 头像选择区域 */
.avatar-section {
  margin-bottom: 40rpx;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.avatar-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f8f9fa;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 100%;
  transition: all 0.3s ease;
}

.avatar-button:active {
  border-color: #667eea;
  background: #f0f4ff;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #eee;
}

.avatar-tips {
  font-size: 24rpx;
  color: #666;
}

/* 昵称输入区域 */
.nickname-section {
  margin-bottom: 40rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.nickname-input:focus {
  border-color: #667eea;
  outline: none;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 40rpx 40rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel {
  flex: 1;
  height: 80rpx;
  background: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.btn-cancel:active {
  background: #e9ecef;
}

.btn-confirm {
  flex: 2;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.btn-confirm:active {
  transform: translateY(1rpx);
}

.btn-confirm:disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 0;
  }
  
  .login-header {
    padding: 60rpx 30rpx 40rpx;
  }
  
  .login-content {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .modal-overlay {
    padding: 20rpx;
  }
}

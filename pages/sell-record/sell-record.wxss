/* pages/sell-record/sell-record.wxss */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 200rpx;
}

.stock-info-card {
  background: linear-gradient(135deg, #ff7675 0%, #fd79a8 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: white;
}

.stock-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.cost-price-display {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cost-label {
  font-size: 28rpx;
  font-weight: 500;
}

.cost-value {
  font-size: 32rpx;
  font-weight: bold;
}

.stock-details {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.detail-item {
  font-size: 26rpx;
  opacity: 0.9;
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin: 30rpx 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  width: 100%;
  height: auto;
  box-sizing: border-box;
}

.form-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.picker-input {
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #fff;
}

.result-preview {
  background-color: #f8f9fa;
  border-radius: 15rpx;
  padding: 30rpx;
  margin: 40rpx 0;
  border-left: 6rpx solid #ff7675;
}

.preview-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  text-align: center;
}

/* 费用明细样式 */
.fee-details {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.fee-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.fee-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.fee-label {
  font-size: 24rpx;
  color: #666;
}

.fee-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.fee-total {
  border-top: 1rpx solid #eee;
  padding-top: 12rpx;
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fee-total-label {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.fee-total-value {
  font-size: 26rpx;
  color: #ff7675;
  font-weight: bold;
}

.calculation-detail {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.calc-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.calc-label {
  font-size: 26rpx;
  color: #666;
}

.calc-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.calc-divider {
  height: 1rpx;
  background-color: #ddd;
  margin: 10rpx 0;
}

.profit-result {
  background-color: rgba(255, 255, 255, 0.8);
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 15rpx 0;
}

.profit-positive {
  color: #10b981 !important;
}

.profit-negative {
  color: #ef4444 !important;
}

.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  gap: 15rpx;
}

.btn-primary {
  background-color: #07c160;
  color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  border: none;
  flex: 2;
}

.btn-primary[disabled] {
  background-color: #ccc;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  border: none;
  flex: 1;
}

.btn-finish {
  background-color: #ff7675;
  color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 28rpx;
  border: none;
  flex: 1;
}

.readonly-tip {
  text-align: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
}

.calc-tip {
  margin-top: 15rpx;
  padding: 15rpx;
  background-color: rgba(255, 118, 117, 0.1);
  border-radius: 8rpx;
  text-align: center;
}

.calc-tip .tip-text {
  font-size: 22rpx;
  color: #ff7675;
  font-weight: 500;
}

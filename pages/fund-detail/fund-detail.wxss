  padding-bottom: 32rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.balance-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.balance-amount {

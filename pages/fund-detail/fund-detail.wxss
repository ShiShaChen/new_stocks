/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 0 40rpx 0;
}

/* =============== 头部区域 =============== */
.header-wrapper {
  position: relative;
  padding: 120rpx 40rpx 80rpx;
  margin-bottom: 40rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%);
  border-radius: 0 0 60rpx 60rpx;
}

.header-content {
  position: relative;
  z-index: 2;
}

/* 账户头部信息 */
.account-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.account-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.account-avatar {
  width: 96rpx;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.avatar-icon {
  font-size: 40rpx;
}

.account-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.account-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.account-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

.filter-toggle {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  border: none;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.filter-toggle:active {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(2rpx);
}

.filter-icon {
  font-size: 28rpx;
}

.filter-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 余额展示卡片 */
.balance-showcase {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.balance-main {
  text-align: center;

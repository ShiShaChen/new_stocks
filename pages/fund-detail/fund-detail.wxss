/* =============== 筛选弹窗 =============== */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  overflow: hidden; /* 防止内容溢出 */
  touch-action: none; /* 禁用触摸操作 */
  -webkit-overflow-scrolling: auto; /* 禁用惯性滚动 */
}

.filter-modal.show {
  opacity: 1;
  visibility: visible;
  position: fixed; /* 强制固定定位 */
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.filter-modal.show .modal-container {
  transform: translateY(0);
  position: fixed; /* 强制固定定位 */
  bottom: 0;
  left: 0;
  right: 0;
}

.modal-backdrop {
  position: fixed; /* 改为fixed定位 */
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
  will-change: backdrop-filter;
  touch-action: none; /* 禁用触摸操作 */
}

.modal-container {
  position: fixed; /* 改为fixed定位，防止跟随页面滚动 */
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  max-height: 85vh;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 -20rpx 60rpx rgba(0, 0, 0, 0.15);
  will-change: transform;
  touch-action: pan-y; /* 只允许垂直滑动 */
  overscroll-behavior: contain; /* 防止滚动穿透 */
}

/* 弹框头部 */
.modal-header {
  position: relative;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 2rpx solid #f0f2f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-shrink: 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  letter-spacing: 1rpx;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  background: #f5f7fa;
  border-radius: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #8f9bb3;
  transition: all 0.2s ease;
  flex-shrink: 0;
  padding: 0;
  line-height: 1;
}

.modal-close:active {
  background: #e4e9f2;
  transform: scale(0.95);
}

/* 筛选内容区域 */
.filter-content {
  flex: 1;
  padding: 20rpx 40rpx 40rpx;
  overflow-y: auto;
  max-height: calc(85vh - 240rpx);
  min-height: 200rpx;
  overscroll-behavior: contain; /* 防止滚动穿透 */
  -webkit-overflow-scrolling: touch;
  position: relative; /* 确保内部滚动独立 */
  touch-action: pan-y; /* 只允许垂直滚动 */
}

/* 筛选分组 */
.filter-section {
  margin-bottom: 48rpx;
}

.filter-section:last-child {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

/* 横排筛选选项布局优化 */
.filter-options-horizontal {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: flex-start;
  justify-content: flex-start;
  max-width: 100%;
  overflow: hidden;
}

.filter-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #f8fafc;
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.filter-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
  transition: left 0.5s ease;
}

.filter-option:active::before {
  left: 100%;
}

.filter-option.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-color: #667eea;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
}

.option-text {
  font-size: 30rpx;
  color: #4a5568;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.filter-option.active .option-text {
  color: #ffffff;
  font-weight: 600;
}

.option-check {
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  animation: checkBounce 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}


/* pages/add-stock/add-stock.wxss */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding: 50rpx 30rpx 150rpx 30rpx;
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin: 30rpx 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.form-input {
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.form-input[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

.form-value {
  font-size: 30rpx;
  color: #333;
  padding: 25rpx;
  background-color: #f8f9fa;
  border-radius: 10rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.radio-item text {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  gap: 20rpx;
}

.btn-primary {
  background-color: #07c160;
  color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  border: none;
  flex: 1;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  border: none;
  flex: 1;
}

.profit-positive {
  color: #10b981;
}

.profit-negative {
  color: #ef4444;
}

.form-tip {
  font-size: 24rpx;
  color: #f39c12;
  margin-top: 10rpx;
}

.status-tip {
  text-align: center;
  padding: 40rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
}

/* 账户选择器样式 */
.account-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  border: 2rpx solid #ddd;
  border-radius: 15rpx;
  background: white;
  min-height: 60rpx;
  box-sizing: border-box;
}

.account-name {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.selector-arrow {
  font-size: 28rpx;
  color: #666;
}

/* 弹窗样式 */
.account-modal, .add-account-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80%;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-account-btn {
  background-color: #07c160;
  color: white;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border: none;
}

.account-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.account-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.account-item:last-child {
  border-bottom: none;
}

.account-item.active {
  background-color: #f8f9fa;
}

.account-info {
  flex: 1;
}

.account-desc {
  font-size: 24rpx;
  color: #07c160;
  display: block;
  margin-top: 5rpx;
}

.check-icon {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  border: none;
}

.btn-cancel {
  background-color: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background-color: #07c160;
  color: white;
}

.btn-confirm:disabled {
  background-color: #ccc;
  color: #999;
}

/* 费用明细样式 */
.fee-details {
  background-color: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-top: 20rpx;
  border-left: 6rpx solid #ff7675;
}

.fee-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.fee-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.fee-label {
  font-size: 24rpx;
  color: #666;
}

.fee-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.fee-total {
  border-top: 1rpx solid #eee;
  padding-top: 12rpx;
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fee-total-label {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.fee-total-value {
  font-size: 26rpx;
  color: #ff7675;
  font-weight: bold;
}

/* 模板选择区域 */
.template-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.template-tip {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.tip-icon {
  font-size: 36rpx;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: #666666;
}

.template-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.template-selected {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selected-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.selected-icon {
  width: 40rpx;
  height: 40rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.selected-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.clear-template {
  padding: 8rpx 20rpx;
  background: #f8f9fa;
  color: #999999;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: 2rpx solid #e0e0e0;
}

/* 模板选择弹窗 */
.template-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.template-modal-content {
  width: 90%;
  max-width: 650rpx;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.template-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.template-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.template-item:active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.template-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.template-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.template-code {
  font-size: 26rpx;
  color: #999999;
}

.template-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.price-label {
  font-size: 24rpx;
  color: #999999;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.template-stats {
  padding: 8rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 8rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #667eea;
}

.empty-template {
  padding: 80rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

.footer-tip {
  padding: 20rpx;
  background: #f8f9fa;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

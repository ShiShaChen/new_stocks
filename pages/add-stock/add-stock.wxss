/* pages/add-stock/add-stock.wxss */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 150rpx;
}

.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin: 30rpx 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.form-input {
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.form-input[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

.form-value {
  font-size: 30rpx;
  color: #333;
  padding: 25rpx;
  background-color: #f8f9fa;
  border-radius: 10rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.radio-item text {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  display: flex;
  gap: 20rpx;
}

.btn-primary {
  background-color: #07c160;
  color: white;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  border: none;
  flex: 1;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #666;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  border: none;
  flex: 1;
}

.profit-positive {
  color: #10b981;
}

.profit-negative {
  color: #ef4444;
}

.form-tip {
  font-size: 24rpx;
  color: #f39c12;
  margin-top: 10rpx;
}

.status-tip {
  text-align: center;
  padding: 40rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
}
